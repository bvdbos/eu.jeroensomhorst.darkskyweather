{
  "id": "eu.jeroensomhorst.darkskyweather",
  "version": "0.0.2",
  "compatibility": ">=1.5.0",
  "sdk": 2,
  "name": {
    "en": "Dark Sky Weather",
    "nl": "Dark Sky Weather",
    "de": "Dark Sky Weather"
  },
  "description": {
    "en": "Get weather info using Dark Sky",
    "nl": "Get weather info using Dark Sky",
    "de": "Get weather info using Dark Sky"
  },
  "category": [
    "climate"
  ],
  "permissions": [],
  "images": {
    "large": "/assets/images/large.png",
    "small": "/assets/images/small.png"
  },
  "author": {
    "name": "Jeroen Somhorst",
    "email": "j.somhorst@gmail.com"
  },
  "drivers": [
    {
      "id": "darksky_current_weather",
      "name": {
        "en": "Current weather",
        "nl": "Actueel weer",
        "de": "Aktuelle Wetterlage"
      },
      "class": "sensor",
      "capabilities": [
        "measure_temperature",
        "measure_humidity",
        "measure_pressure",
        "measure_rain",
        "measure_wind_strength",
        "measure_wind_angle",
        "measure_gust_strength",
        "cstm_measure_visibility",
        "cstm_measure_uvindex",
        "cstm_apparent_temperature"
      ],
      "pair": [
        {
          "id": "list_devices",
          "template": "list_devices",
          "navigation": {
            "next": "add_my_devices"
          }
        },
        {
          "id": "add_my_devices",
          "template": "add_devices"
        }
      ],
      "settings": [
        {
        "type": "group",
        "label": {
          "en": "Darksky settings",
          "nl": "Darksky instellingen"
        },
        "children": [{
          "id": "apikey",
          "type": "text",
          "value": "abcdefghijklmnopqrstuvwxyz",
          "label": {
            "en": "Darksky api key",
            "nl": "Darksky api sleutel"
          },
          "hint": {
            "en": "An API key is required. You can obtain one at https://darksky.net/dev.",
            "nl": "Een API sleutel is verplicht. U kunt er een opvragen via https://darksky.net/dev."
          }
        },
          {
            "id": "longtitude",
            "type": "number",
            "value": 0,
            "label": {
              "en": "Longtitude",
              "nl": "Lengtegraad",
              "de": "Längengrad"
            }
          },
          {
            "id": "latitude",
            "type": "number",
            "value": 0,
            "label": {
              "en": "Latitude",
              "nl": "Breedtegraad",
              "de": "Breitengrad"
            }
          },
          {
            "id": "aboutlabel",
            "type": "label",
            "label": {
              "en": "Powered by Dark sky",
              "nl": "Powered by Dark sky",
              "de": "Powered by Dark sky"
            },
            "value": "Powered by Dark Sky "
          }
        ]
      }]
    }
  ],
  "capabilities": {
    "cstm_measure_uvindex": {
      "type": "number",
      "title": {
        "en": "UV-index",
        "nl": "Zonkracht",
        "de": "UV-index"
      },
      "insights": true,
      "insightsTitleTrue": {
        "en": "UV-index",
        "nl": "Zonkracht",
        "de": "UV-index"
      },
      "getable": true,
      "setable": false,
      "icon": "/assets/cap_measure_uvindex.svg"
    },
    "cstm_apparent_temperature": {
      "type": "number",
      "title": {
        "nl": "Gevoelstemperatuur",
        "en": "Wind chill",
        "de": "Windkühle"
      },
      "insights": true,
      "insightsTitleTrue": {
        "nl": "Gevoelstemperatuur",
        "en": "Wind chill",
        "de": "Windkühle"
      },
      "icon": "/assets/cap_apparent_temperature.svg"
    },
    "cstm_measure_visibility": {
      "type": "number",
      "title": {
        "en": "Visibility",
        "nl": "Zichtbaarheid",
        "de": "Sichtweite"
      },
      "icon": "/assets/cap_measure_visibility.svg"
    }
  }
}
